@{
  Layout = "_Layout";
}
@using Factory.Models
@model List<Factory.Models.Engineer>

<div class="row">
  <div class="col">
    
    <h3>Engineers</h3>
    <div class="row">
      <div class="col">
        <ul class="nav">
          <li class="nav-item">
            @Html.ActionLink("Add Engineer", "Create")
          </li>
        </ul>
      </div>
    </div>
    <br>
    @if (@Model.Count == 0)
    {
      <p>No engineers have been added yet. Follow this link: @Html.ActionLink("add engineer", "Create"), or use the link above to add an engineer.</p>
    }
    else
    {
    <ul>
      @foreach (Engineer engineer in Model)
      {
        <li>@Html.ActionLink($"{engineer.Name}", "Details", new {id = engineer.EngineerId})</li>
      }
    </ul>
    }
  </div>
</div>