@{
  Layout = "_Layout";
}
@model Factory.Models.Engineer

<div class="row">
  <div class="col">
    <h3>Add an Engineer</h3>

    @using (Html.BeginForm())
    {
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name)

      @Html.Label("Hire Date")
      @Html.TextBoxFor(model => model.HireDate, new { type="date" })

      @Html.Label("Add Machine")
      @Html.DropDownList("MachineId", "Select Machine License")

      <input type="submit" value="Add Engineer" class="btn btn-success" />
    }
  </div>
</div>