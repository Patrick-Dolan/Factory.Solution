@{
  Layout = "_Layout";
}
@model Factory.Models.Machine

<div class="row">
  <div class="col">
    <h3>Edit @Html.DisplayFor(model => model.Name):</h3>
    @using (Html.BeginForm())
    {
      @Html.HiddenFor(model => model.MachineId)

      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name)

      @Html.Label("Machine Description")
      @Html.TextBoxFor(model => model.Description)

      @Html.Label("Add Engineer")
      @Html.DropDownList("EngineerId", "Select Engineer")

      <input type="submit" value="Update Machine" class="btn btn-success" />
    }
  </div>
</div>