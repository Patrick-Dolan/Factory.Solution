@{
  Layout = "_Layout";
}
@using Factory.Models
@model List<Factory.Models.Machine>

<div class="row">
  <div class="col">
    
    <h3>Machines</h3>
    <p>@Html.ActionLink("Add Machine", "Create")</p>
    <br>
    @if (@Model.Count == 0)
    {
      <p>No machines have been added yet. Follow this link: @Html.ActionLink("add machine", "Create"), or use the link above to add a machine.</p>
    }
    else
    {
    <ul>
      @foreach (Machine machine in Model)
      {
        <li>@Html.ActionLink($"{machine.Name}", "Details", new {id = machine.MachineId})</li>
      }
    </ul>
    }
  </div>
</div>